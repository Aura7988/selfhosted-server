server {
    listen  80;
    server_name {{ config.shurl }};
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name {{ config.shurl }};

    ssl_certificate /etc/letsencrypt/live/{{ config.shurl }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ config.shurl }}/privkey.pem;
    include /etc/nginx/ssl_params;

    root /var/www/yourls;
    index index.html index.htm index.php;

    access_log /var/log/nginx/yourls_access.log;
    error_log /var/log/nginx/yourls_error.log info;

    location / {
        try_files $uri $uri/ /yourls-loader.php;
    }

    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        include /etc/nginx/fastcgi_params;
        fastcgi_split_path_info ^(.+\.php)(.*)$;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }

}
